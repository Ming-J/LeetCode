import sys

####
####

def main():
    input = "ABABBBACFEYUKOTT"
    prev = 0
    maxStep = 0
    for i,ch in enumerate(input):
        if ch == 'A' or ch == 'E' or ch =='I' or ch == 'O' or ch =='U':
            maxStep = max(abs(i-prev),prev)
    maxStep = max(len(input) - prev,maxStep)
    print(maxStep)

if __name__ == ("__main__"):
    main()
