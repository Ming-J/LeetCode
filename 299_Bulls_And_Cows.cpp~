class Solution {
public:
    string getHint(string secret, string guess) {
      int a=0,b=0;
      for(int i=0;i<guess.size();i++){
	char temp=checkstring(i,guess[i],secret);
	if(temp=='A'){
	  a++;
	}
	if(temp=='B'){
	  b++;
	}
      }
      return to_string(a)+'A'+to_string(b)+'B';
    }

  char checkstring(int pos, char n, string secret){
    if(secret[pos]==n){
      return 'A'; 
    }else{
      for(int i=0;i<secret.size();i++){
	if(i!=pos&&secret[i]==n){
	  return 'B';
	}
      }
      return NULL;
    }
  }
};

